<?xml version='1.0' encoding='utf-8'?>
<widget id="com.group34.davis" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Davis</name>
    <description>
        Simple messaging and communications app for synoptic project.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <icon src="res/icon/davisSquare.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/davis-hdpi.png" density="land-hdpi" />
        <splash src="res/screen/android/davis-ldpi.png" density="land-ldpi" />
        <splash src="res/screen/android/davis-mdpi.png" density="land-mdpi" />
        <splash src="res/screen/android/davis-xhdpi.png" density="land-xhdpi" />
        <splash src="res/screen/android/davis-xxhdpi.png" density="land-xxhdpi" />
        <splash src="res/screen/android/davis-xxxhdpi.png" density="land-xxxhdpi" />

        <splash src="res/screen/android/davis-hdpi.png" density="port-hdpi" />
        <splash src="res/screen/android/davis-ldpi.png" density="port-ldpi" />
        <splash src="res/screen/android/davis-mdpi.png" density="port-mdpi" />
        <splash src="res/screen/android/davis-xhdpi.png" density="port-xhdpi" />
        <splash src="res/screen/android/davis-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/screen/android/davis-xxxhdpi.png" density="port-xxxhdpi" /> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashScreenBackgroundColor" value="0x3a3b52"/>
</widget>
